            <corners android:radius="5dp" />
            <solid android:color="#D7D7D7" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#D7D7D7" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#21C392" />
            </shape>
        </clip>
    </item>

</layer-list>