<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <cb.xlibrary.picker.date.DatePicker
        android:id="@+id/dayPicker_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:wheelCyclic="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/datepicker_divider_cblibrary" />

    <Button
        android:id="@+id/btn_dialog_date_decide"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f7f7f7"
        android:text="@string/datepicker_decide_cblibrary"
        android:textColor="@color/datepicker_selectedTextColor_cblibrary" />
</LinearLayout>