<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f7f7f7"
        android:gravity="center"
        android:text="选择时间" />

    <com.cb.xlibrary.picker.time.HourAndMinutePicker
        android:id="@+id/time_picker_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:wheelCyclic="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/datepicker_divider_cblibrary" />

    <Button
        android:id="@+id/btn_dialog_date_decide"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f7f7f7"
        android:text="确定"
        android:textColor="@color/datepicker_selectedTextColor_cblibrary" />
</LinearLayout>