<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/comment_header_activity" />

<!--    <com.example.cb.test.bubble.BubbleView3-->
<!--        android:id="@+id/view"-->
<!--        android:layout_width="500px"-->
<!--        android:layout_height="500px"-->
<!--        android:background="#ff0"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginVertical="20dp" />-->


    <com.example.cb.test.bubble.BubbleView3
        android:id="@+id/view"
        android:layout_width="500px"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_height="277px"/>

    <EditText
        android:id="@+id/time_edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="200ms,气泡消失时间,小于气泡平移时间" />

    <EditText
        android:id="@+id/time_edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="480ms,气泡平移时间，大于气泡消失时间" />

    <EditText
        android:id="@+id/time_edit5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="80ms,气泡动画间隔" />

    <EditText
        android:id="@+id/time_edit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="气泡颜色，不用填#" />
    <EditText
        android:id="@+id/time_edit4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="背景颜色，不用填#" />
    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始动画" />

    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重置" />

    <Button
        android:id="@+id/debug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="debug enable" />

    <Button
        android:id="@+id/bgBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="背景颜色" />
</LinearLayout>