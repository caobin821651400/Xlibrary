<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#f7f7f7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.sccl.xlibrary.picker.time.HourPicker
        android:id="@+id/hourPicker_layout_time"
        app:halfVisibleItemCount="2"
        app:indicatorText="@string/datepicker_hour_cblibrary"
        app:wheelCyclic="true"
        app:indicatorTextSize="12sp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <cn.sccl.xlibrary.picker.time.MinutePicker
        android:id="@+id/minutePicker_layout_time"
        app:wheelCyclic="true"
        app:indicatorText="@string/datepicker_minute_cblibrary"
        app:indicatorTextSize="12sp"
        app:halfVisibleItemCount="2"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</LinearLayout>