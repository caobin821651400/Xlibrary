<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xloading_error_view_cblibrary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/XFrame_spacing_cblibrary"
        android:text="@string/xloading_error_text_cblibrary"
        android:textColor="@color/XFrame_text_gray_cblibrary"
        android:textSize="@dimen/XFrame_text_size_cblibrary" />

    <TextView
        android:id="@+id/xloading_retry"
        style="@style/xloading_padding_style_cblibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/xloading_btn_selector_cblibrary"
        android:text="@string/xloading_retry_text_cblibrary"
        android:textColor="@color/XFrame_text_gray_cblibrary"
        android:textSize="@dimen/XFrame_text_size_cblibrary" />
</LinearLayout>