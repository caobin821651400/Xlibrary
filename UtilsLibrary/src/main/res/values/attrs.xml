    </declare-styleable>

    <!--角标上面图片下面文字的布局-->
    <declare-styleable name="BadgeTxtImgLayout">
        <attr name="badge_title_txt" format="string" />
        <attr name="badge_count" format="integer" />
        <attr name="badge_icon" format="reference" />
        <attr name="badge_title_txt_color" format="color" />
        <attr name="badge_title_txt_size" format="dimension" />
