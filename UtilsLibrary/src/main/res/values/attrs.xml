            <enum name="number" value="2" />
            <enum name="normal" value="1" />
            <enum name="textPassword" value="129" />
            <enum name="numberDecimal" value="8194" />
        </attr>
        <attr name="form_end_txt_gravity">
            <enum name="right" value="5" />
            <enum name="left" value="3" />
            <enum name="center" value="17" />
        </attr>
    </declare-styleable>

    <!--rv进度条-->
    <declare-styleable name="XRvHorizontalProgress">
        <attr name="xrv_max_full" format="boolean" />
        <attr name="xrv_progress_drawable" format="reference" />
        <attr name="xrv_background" format="reference" />
        <attr name="xrv_progress_width" format="dimension" />

    </declare-styleable>
</resources>