        <attr name="content_id" format="reference" />
        <attr name="right_id" format="reference" />
    </declare-styleable>

    <!--前面带红色*号的TextView，标识必填-->
    <declare-styleable name="AsteriskTextView">
        <attr name="isMustInput" format="boolean" />
        <attr name="txt" format="string" />
    </declare-styleable>

    <!--设置，个人中心左右显示文字布局-->
    <declare-styleable name="XSettingView">
        <attr name="item_title_txt" format="string" />
        <attr name="item_title_txt_color" format="color" />
        <attr name="item_title_txt_size" format="dimension" />

        <attr name="item_end_show_arrow" format="boolean" />
        <attr name="item_end_txt" format="string" />
        <attr name="item_hint_txt" format="string" />
        <attr name="item_end_txt_color" format="color" />
        <attr name="item_end_txt_size" format="dimension" />
        <attr name="item_end_txt_padding" format="dimension" />
        <attr name="item_header_width" format="dimension" />
        <attr name="item_end_txt_drawable_right" format="reference" />
        <attr name="item_is_must_input" format="boolean" />
        <attr name="item_is_show_hint" format="boolean" />
        <attr name="item_end_txt_gravity">
            <enum name="right" value="5" />
            <enum name="left" value="3" />
            <enum name="center" value="17" />
        </attr>
    </declare-styleable>

    <!--设置，个人中心左右显示，可以输入-->
    <declare-styleable name="XFormInputView">
        <attr name="form_title_txt" format="string" />
        <attr name="form_title_txt_color" format="color" />
        <attr name="form_title_txt_size" format="dimension" />

        <attr name="form_header_width" format="dimension" />
        <attr name="form_end_txt" format="string" />
        <attr name="form_hint_txt" format="string" />
        <attr name="form_end_txt_color" format="color" />
        <attr name="form_edit_hint_color" format="color" />
        <attr name="form_end_txt_size" format="dimension" />
        <attr name="form_is_must_input" format="boolean" />
        <attr name="form_max_length" format="integer" />
