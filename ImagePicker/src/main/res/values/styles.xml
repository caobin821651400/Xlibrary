<resources>
    <declare-styleable name="CbCropImageView">
        <attr name="cblibrary_cropMaskColor" format="color" />
        <attr name="cblibrary_cropBorderColor" format="color" />
        <attr name="cblibrary_cropBorderWidth" format="dimension" />
        <attr name="cblibrary_cropFocusWidth" format="dimension" />
        <attr name="cblibrary_cropFocusHeight" format="dimension" />
        <attr name="cblibrary_cropStyle" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="circle" value="1" />
        </attr>
    </declare-styleable>

    <!--SuperCheckbox的样式-->
    <style name="IpSuperCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ip_selector_item_checked</item>
    </style>


    <style name="CbImagePickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CbImagePickerThemeFullScreen" parent="CbImagePickerTheme">
        <item name="android:fitsSystemWindows">false</item>
    </style>

</resources>
